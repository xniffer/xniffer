	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'xniffer'",
			"cargo": {
				"args": [
					"build",
					"--bin=xniffer",
					"--package=xniffer"
				],
				"filter": {
					"name": "xniffer",
					"kind": "bin"
				}
			},
			"args": [
				"/home/reee/exif-samples/jpg/Fujifilm_FinePix_E500.jpg"
			],
			"cwd": "${workspaceFolder}/target/"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'xniffer'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=xniffer",
					"--package=xniffer"
				],
				"filter": {
					"name": "xniffer",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}